<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/orange"/> <!-- Pressed color -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/grey"/> <!-- Default background color -->
            <stroke android:width="1dp" android:color="#DDDDDD"/> <!-- Border color -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>
